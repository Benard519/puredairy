---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { products } from '../data/products.js';

const featuredProducts = products.slice(0, 3);
---

<Layout title="Pure Dairy - Premium Fresh Milk & Dairy Products" description="Farm-fresh dairy products delivered to your door. Premium quality milk, cheese, butter, and yogurt from our family farm.">
  <Header />
  
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-blue-50 to-green-50 overflow-hidden">
    <div class="absolute inset-0 bg-white/50"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 lg:py-32">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div data-aos="fade-right">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight mb-6">
            Fresh <span class="text-blue-600">Dairy</span> from Our <span class="text-green-600">Farm</span> to Your Table
          </h1>
          <p class="text-xl text-gray-600 mb-8 leading-relaxed">
            Experience the pure taste of premium dairy products. Made with love, delivered with care, and trusted by families for over 35 years.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/products" class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-lg font-semibold transition-colors text-center shadow-lg hover:shadow-xl">
              Shop Now
            </a>
            <a href="/about" class="border-2 border-gray-300 hover:border-gray-400 text-gray-700 px-8 py-3 rounded-lg font-semibold transition-colors text-center">
              Learn More
            </a>
          </div>
        </div>
        <div data-aos="fade-left" class="relative">
          <img 
            src="https://images.pexels.com/photos/248412/pexels-photo-248412.jpeg?auto=compress&cs=tinysrgb&w=1200" 
            alt="Fresh milk and dairy products" 
            class="w-full h-auto rounded-2xl shadow-2xl"
            loading="eager"
          >
          <div class="absolute -bottom-6 -left-6 bg-white p-4 rounded-xl shadow-lg">
            <div class="flex items-center space-x-2">
              <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
              <span class="text-sm font-medium text-gray-700">Farm Fresh Daily</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12" data-aos="fade-up">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Why Choose Pure Dairy?</h2>
        <p class="text-xl text-gray-600">Quality, freshness, and sustainability in every product</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center" data-aos="fade-up" data-aos-delay="100">
          <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">100% Pure & Natural</h3>
          <p class="text-gray-600">No artificial additives, hormones, or preservatives. Just pure, natural dairy goodness.</p>
        </div>
        
        <div class="text-center" data-aos="fade-up" data-aos-delay="200">
          <div class="bg-green-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Farm Fresh Daily</h3>
          <p class="text-gray-600">Products are processed and delivered within 24-48 hours for maximum freshness.</p>
        </div>
        
        <div class="text-center" data-aos="fade-up" data-aos-delay="300">
          <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Family Owned</h3>
          <p class="text-gray-600">Three generations of dairy expertise, treating every customer like family.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Products -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12" data-aos="fade-up">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Featured Products</h2>
        <p class="text-xl text-gray-600">Our most popular dairy products, loved by families everywhere</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {featuredProducts.map((product, index) => (
          <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow" data-aos="fade-up" data-aos-delay={index * 100}>
            <img src={product.image} alt={product.name} class="w-full h-48 object-cover">
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-2">{product.name}</h3>
              <p class="text-gray-600 mb-4">{product.description}</p>
              <div class="flex justify-between items-center">
                <span class="text-2xl font-bold text-blue-600">${product.price}</span>
               <button 
                 class="snipcart-add-item bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors"
                 data-item-id={`product-${product.id}`}
                 data-item-price={product.price}
                 data-item-description={product.description}
                 data-item-image={product.image}
                 data-item-name={product.name}
                 data-item-url="https://puredairy.netlify.app/products"
                 data-item-categories={product.category}
               >
                Add to Cart
                </button>
              </div>
            </div>
          </div>
        ))}
      </div>
      
      <div class="text-center mt-12" data-aos="fade-up">
        <a href="/products" class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-lg font-semibold transition-colors inline-block">
          View All Products
        </a>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 bg-gradient-to-r from-blue-600 to-green-600">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8" data-aos="fade-up">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Ready to Taste the Difference?
      </h2>
      <p class="text-xl text-blue-100 mb-8">
        Join thousands of satisfied customers who choose Pure Dairy for their family's nutrition needs.
      </p>
      <a href="/products" class="bg-white text-blue-600 hover:bg-gray-100 px-8 py-3 rounded-lg font-semibold transition-colors inline-block shadow-lg">
        Start Shopping
      </a>
    </div>
  </section>

  <Footer />
</Layout>
