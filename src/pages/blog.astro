---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { blogPosts } from '../data/blog.js';
---

<Layout title="Blog - Pure Dairy" description="Read our latest articles about dairy health benefits, sustainable farming practices, and delicious recipes using fresh dairy products.">
  <Header />
  
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-blue-100 to-green-100 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4" data-aos="fade-up">Our Blog</h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto" data-aos="fade-up" data-aos-delay="100">
        Discover the latest insights on dairy nutrition, sustainable farming, and delicious recipes from our experts.
      </p>
    </div>
  </section>

  <!-- Blog Posts -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
        {blogPosts.map((post, index) => (
          <article class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow" data-aos="fade-up" data-aos-delay={index * 100}>
            <img src={post.image} alt={post.title} class="w-full h-48 object-cover" loading="lazy">
            <div class="p-6">
              <div class="flex items-center space-x-2 mb-3">
                <span class="bg-blue-100 text-blue-800 text-xs font-semibold px-2 py-1 rounded-full">
                  {post.category}
                </span>
                <span class="text-gray-500 text-sm">{new Date(post.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
              </div>
              
              <h2 class="text-xl font-bold text-gray-900 mb-3 hover:text-blue-600 transition-colors">
                <a href={`/blog/${post.id}`}>{post.title}</a>
              </h2>
              
              <p class="text-gray-600 mb-4 line-clamp-3">{post.excerpt}</p>
              
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-2">
                  <div class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center">
                    <span class="text-xs font-semibold text-gray-600">{post.author.split(' ').map(n => n[0]).join('')}</span>
                  </div>
                  <span class="text-sm text-gray-700">{post.author}</span>
                </div>
                
                <a href={`/blog/${post.id}`} class="text-blue-600 hover:text-blue-700 font-medium text-sm transition-colors">
                  Read More â†’
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Newsletter Signup -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center" data-aos="fade-up">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">Stay Updated</h2>
      <p class="text-xl text-gray-600 mb-8">
        Subscribe to our newsletter for the latest articles, recipes, and farm updates delivered to your inbox.
      </p>
      
      <form class="max-w-md mx-auto flex">
        <input 
          type="email" 
          placeholder="Enter your email address" 
          class="flex-1 px-4 py-3 border border-gray-300 rounded-l-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          required
        >
        <button 
          type="submit" 
          class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-r-lg font-semibold transition-colors"
        >
          Subscribe
        </button>
      </form>
      
      <p class="text-sm text-gray-500 mt-4">
        We respect your privacy. Unsubscribe at any time.
      </p>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const newsletterForm = document.querySelector('form');
    
    if (newsletterForm) {
      newsletterForm.addEventListener('submit', function(e) {
        e.preventDefault();
        const email = this.querySelector('input[type="email"]').value;
        
        // Simple newsletter signup feedback
        alert(`Thank you for subscribing with ${email}! You'll receive our latest blog posts and updates.`);
        this.reset();
      });
    }
  });
</script>