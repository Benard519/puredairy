    })();
    </script>
  </head>
  <body class="bg-milk-50 font-sans">
    <div hidden id="snipcart" data-api-key="YjRlODgzYjMtZDgwZC00ZDQyLWFiNjQtNmZmMDM0ZWM0NWEyNjM4ODYwOTc2OTIwNzA0ODM5" data-config-modal-style="side"></div>
    
    <slot />
    
    <!-- Snipcart JS -->
